{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @ingroup templates
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
  'region',
  'region-' ~ region|clean_class,
  'col-sm-12',
]
%}

{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div class="col-sm-5 footer-logo-column">
      {{ elements.chameleon_sitebranding }}
    </div>
    <div class="col-sm-2 footer-menu-column">
      {{ elements.chameleon_footermenuplatform }}
    </div>
    <div class="col-sm-3 footer-menu-column">
      {{ elements.chameleon_footermenufaq }}
    </div>
    <div class="col-sm-2 footer-menu-column">
      {{ elements.chameleon_footermenusupport }}
    </div>
  </div>
  <hr>
  <div class="col-sm-10">
    {{'Â© 2023 chameleon CV. All rights reserved.' | t }}
  </div>
  <div class="col-sm-2 footer-social">
    <a href="https://www.facebook.com"><img src="/{{ directory }}/images/LinkedIn.png"></a>
    <a href="https://www.linkedin.com"><img src="/{{ directory }}/images/Facebook.png"></a>
  </div>
{% endif %}
